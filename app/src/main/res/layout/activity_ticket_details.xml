<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TicketDetailsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/ticketDetailsHeader"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layoutDirection="rtl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ticketDetailsFirstLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ticketDetailsDriverLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsDriversName" />

                <TextView
                    android:id="@+id/ticketDetailsDriverNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/ticketDetailsCarNumberLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsCarsNumber" />

                <TextView
                    android:id="@+id/ticketDetailsCarNumberId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsSecondLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticketDetailsFirstLineId">

                <TextView
                    android:id="@+id/ticketDetailsCarTicketNumberLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsTicketNumber" />

                <TextView
                    android:id="@+id/ticketDetailsTicketNumberId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsThirdLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticketDetailsSecondLineId">

                <TextView
                    android:id="@+id/ticketDetailsCarTicketDateLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsTicketDate" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsFourthLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticketDetailsThirdLineId">

                <TextView
                    android:id="@+id/ticketDetailsCarTicketDayLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsDayOfWeek" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketDayId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketHourLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsHour" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketHourId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsFifthLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticketDetailsFourthLineId"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticketDetailsCarTicketPlaceLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsPlace" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketPlaceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketClauseLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsFelonyClause" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketClauseId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsSixthLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticketDetailsFifthLineId"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticketDetailsCarTicketPointsLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsPoints" />

                <TextView
                    android:id="@+id/ticketDetailsCarTicketPointsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsEightLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticketDetailsSixthLineId"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ticketDetailsOfficeStatusLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/ticketDetailsOfficeStatus" />

                <TextView
                    android:id="@+id/ticketDetailsOfficeStatusId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsNinthLineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticketDetailsEightLineId"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticketDetailsDetailsLabelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/cupNotes" />

                <TextView
                    android:id="@+id/ticketDetailsDetailsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsTenthLineId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ticketDetailsNinthLineId"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticketDetailsDriverNotesIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/driverNotesFieldName" />

                <TextView
                    android:id="@+id/ticketDetailsDriverNotesId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketDetailsEleventhLineId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ticketDetailsTenthLineId"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newTicketLastCommentIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/newTicketLastComment" />

                <TextView
                    android:id="@+id/ticketLastCommentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
